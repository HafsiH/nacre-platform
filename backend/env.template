# NACRE Platform Environment Configuration Template
# Copy this file to .env and update the values as needed

# OpenAI API Configuration (REQUIRED for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration (using available models)
OPENAI_MODEL=gpt-4o-mini
SOPHIE_MODEL=gpt-4o-mini
EMBEDDINGS_MODEL=text-embedding-3-large
TRAINING_MODEL=gpt-4o-mini
ANALYSIS_MODEL=gpt-4o-mini
COMMUNICATION_MODEL=gpt-4o-mini

# Application Settings
STORAGE_DIR=../storage
MAX_CANDIDATES=25
PREVIEW_ROWS=20
BATCH_SIZE=10

# Sophie AI Settings
SOPHIE_ENABLED=true
SOPHIE_MAX_CONTEXT=16000
SOPHIE_TEMPERATURE=0.2
SOPHIE_MAX_TOKENS=1000

# Advanced AI Features
ENABLE_ADVANCED_REASONING=true
ENABLE_MULTI_STEP_ANALYSIS=true
ENABLE_CONTEXT_ENHANCEMENT=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=nacre.log
